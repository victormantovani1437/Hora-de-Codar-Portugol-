programa {
  funcao inicio() {
   // Declaração das variáveis
    real base, altura, area

    // Entrada de dados
    escreva("Informe a base do retângulo: ")
    leia(base)
    escreva("Informe a altura do retângulo: ")
    leia(altura)

    // Cálculo da área
    area = base * altura

    // Exibição do resultado
    escreva("A área do retângulo é: ", area)
    
  }
}
  